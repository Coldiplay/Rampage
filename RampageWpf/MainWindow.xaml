<Window x:Class="RampageWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:RampageWpf"
        xmlns:local="clr-namespace:RampageWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.RowSpan="2" Orientation="Horizontal">
            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                <ListView ItemsSource="{Binding GameHistory}"/>
            </ScrollViewer>
        </StackPanel>
        
        

        <StackPanel Grid.Column="1">
            <TextBlock Text="Имя игрока"/>
            <TextBox Text="{Binding CurrentPlayer.Name}" IsEnabled="{Binding CanChange}"/>
            <Button Content="Подключиться" Click="JoinGame_Click" IsEnabled="{Binding CanChange}"/>
        </StackPanel>
        
        

        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBlock Text="Тип действия"/>
            <ComboBox DisplayMemberPath="GetActionName" ItemsSource="{Binding Actions}" SelectedItem="{Binding SelectedAction}"/>
            <TextBlock Text="Цель действия"/>
            <ComboBox DisplayMemberPath="Name" SelectedItem="{Binding SelectedAction.Target}" ItemsSource="{Binding CurrentRoom.GetPlayers}"/>
            <Button Content="Выбрать действие" Click="ChooseTarget_Click"/>
        </StackPanel>
        
        
        
    </Grid>
</Window>
